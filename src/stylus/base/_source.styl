html
	font-family 'Arial'
	background-color #fafbfc
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	font-size 16px
body
	//-height 100%
	width 100%
.container
	//background white url('./assets/img/fondo.jpg') no-repeat
	//background-size cover
	background #f6f6f6
	overflow hidden
.box_center
	max-width 1240px
	margin 0 auto
.mask
	position absolute
	width 100%
	height 100%
	border-radius 5px
	background-color rgba(0, 72, 101, 0.91)
	top 0
	left 0
	a
		width 33%
		display inline-block
		text-align center
		color white
		&:hover
			color #009edb
		i
			display block
			margin 0 auto
			font-size 45px
			line-height 1
		span
			font-family 20px
button
	span
		display block
.ctn_form
	margin 0 auto
	max-width 800px
